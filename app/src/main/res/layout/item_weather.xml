<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/cycler"
        android:gravity="center">
        <TextView
            android:id="@+id/itemKieuThoiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nắng"
            android:textStyle="bold"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/itemTenTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemMoTa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nắng nóng, xuất hiện mưa rào ở một vài nơi"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemNhietDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="32\u2103"
            android:textStyle="bold"
            android:textSize="20dp"
            android:inputType="number"/>

    </LinearLayout>

</LinearLayout>